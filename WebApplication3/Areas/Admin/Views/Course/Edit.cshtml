
@model Courses
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Course Edit</h4>
            <p class="card-description">
                Corse Create
            </p>
            <form  method="post"class="forms-sample" asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title" aria-label="Username">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Price" type="text" class="form-control" placeholder="Price" aria-label="Amount (to the nearest dollar)">
                    <div class="input-group-append">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">0.00</span>
                    </div>
                    <input asp-for="Time" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="Time">
                </div>
            </div>
                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="TeacherId" type="text" class="form-control" placeholder="Teacher" aria-label="Username">
                    </div>
                </div>
     
                <div asp-validation-summary="ModelOnly"></div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
                </form>
        </div>
    </div>
</div>